{
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "turboConsoleLog.includeFileNameAndLineNum": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "fira code",
    "editor.fontLigatures": true,
    // "editor.fontFamily": "Cascadia Code",
    // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss19', 'ss20'",
    // "editor.fontFamily": "JetBrains Mono",
    // "editor.fontLigatures": true,
    // "editor.fontFamily": "Operator Mono SSm Lig",
    // "editor.fontLigatures": true,
    // "workbench.colorTheme": "Night Owl",
    "commentAnchors.showCursor": true,
    "commentAnchors.tags.anchors": {
        "ANCHOR": {
            "iconColor": "default",
            "highlightColor": "#A8C023",
            "scope": "file"
        },
        "TODO": {
            "iconColor": "blue",
            "highlightColor": "#3ea8ff",
            "scope": "workspace"
        },
        "FIXME": {
            "iconColor": "red",
            "highlightColor": "#F44336",
            "scope": "workspace"
        },
        "STUB": {
            "iconColor": "purple",
            "highlightColor": "#BA68C8",
            "scope": "file"
        },
        "NOTE": {
            "iconColor": "orange",
            "highlightColor": "#FFB300",
            "scope": "file"
        },
        "REVIEW": {
            "iconColor": "green",
            "highlightColor": "#64DD17",
            "scope": "workspace"
        },
        "SECTION": {
            "iconColor": "blurple",
            "highlightColor": "#896afc",
            "scope": "workspace",
            "behavior": "region"
        },
        "LINK": {
            "iconColor": "#2ecc71",
            "highlightColor": "#2ecc71",
            "scope": "workspace",
            "behavior": "link"
        }
    },
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "quokka.colors": {
        "covered": "#62b455",
        "errorPath": "#ffa0a0",
        "errorSource": "#fe536a",
        "notCovered": "#cccccc",
        "partiallyCovered": "#d2a032"
    },
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "git.openRepositoryInParentFolders": "never",
    "workbench.editorAssociations": {
        "*.xlsx": "default",
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },
    "workbench.colorTheme": "SynthWave '84",
    "synthwave84.disableGlow": false,
    "cyber77.disableGlow": false,
}